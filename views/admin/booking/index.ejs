<%- include('../../templates/header.ejs') %>
  <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="card shadow mb-4">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Data Booking</h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>No</th>
                <th>Date</th>
                <th>Item</th>
                <th>Member</th>
                <th>Status</th>
                <th>#</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i< booking.length; i++){ %>
                <tr>
                  <td style="width: 10%;">
                    <%= i+1 %>
                  </td>
                  <td>
                    <%= booking[i].bookingStartDate.toLocaleString().split(',')[0] %> s.d <%= booking[i].bookingEndDate.toLocaleString().split(',')[0] %>
                  </td>
                  <td>
                    <%= booking[i].itemId.title %>
                  </td>
                  <td>
                    <%= booking[i].memberId.firstName %> <%= booking[i].memberId.lastName %>
                  </td>
                  <td>
                    <%= booking[i].payments.status %>
                  </td>
                  <td style="width: 10%;">
                    <a href="/admin/detail_booking/<%= booking[i].id %>" class="btn btn-info btn-circle btn-sm btn-update">
                      <i class="fa fa-eye"></i>
                    </a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>


  </div>
  <!-- /.container-fluid -->
  <%- include('../../templates/footer.ejs') %>